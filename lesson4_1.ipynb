    "#學生總分為300\n",
    "#有些學生可以加分5%, 如果加分超過300以300\n",
    "\n",
    "scores = int(input(\"請輸入學生分數\"))\n",
    "is_add = input(\"學生是否符合加分條件?(y,n)\")\n",
    "\n",
    "if is_add == 'y':\n",
    "    scores *=1.05\n",
    "    if scores > 300: scores = 300\n",
    "\n",
    "print(f\"輸入學生分數為:{scores}\")"
